{
  "name": "@zanichelli/albe-web-components",
  "version": "3.0.0",
  "description": "The Web Components implementation of Albe, the Zanichelli's design system.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/web-components-library/web-components-library.esm.js",
  "files": [
    "dist/",
    "loader/",
    "www/",
    "react/"
  ],
  "scripts": {
    "build": "mkdirp react && yarn build.wc && yarn build.react && prettify",
    "build.wc": "stencil build --docs",
    "build.react": "rimraf react && tsc --build tsconfig.react.json",
    "prettify": "prettier --write .",
    "start": "stencil build --dev --watch --serve --no-open",
    "generate": "plop --plopfile internals/generators/index.js",
    "test": "stencil test --spec",
    "test.watch": "stencil test --spec --watch",
    "test.e2e": "stencil test --e2e",
    "release": "standard-version",
    "start-storybook": "start-storybook --port 3003 --ci --no-manager-cache",
    "build-storybook": "yarn build && build-storybook --config-dir .storybook . --output-dir storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@stencil/core": "^2.4.0",
    "@stencil/eslint-plugin": "^0.4.0",
    "@stencil/react-output-target": "^0.3.0",
    "@storybook/addon-a11y": "^6.5.7",
    "@storybook/addon-controls": "^6.5.7",
    "@storybook/addon-docs": "^6.5.7",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/addon-viewport": "^6.5.7",
    "@storybook/builder-webpack5": "^6.5.7",
    "@storybook/manager-webpack5": "^6.5.7",
    "@storybook/web-components": "^6.5.7",
    "@types/hammerjs": "^2.0.39",
    "@types/jest": "26.0.20",
    "@types/puppeteer": "5.4.3",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "babel-loader": "^8.2.4",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "husky": "^5.1.1",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "lit-html": "^1.4.0",
    "mkdirp": "^1.0.4",
    "plop": "^2.1.0",
    "prettier": "^2.7.1",
    "puppeteer": "8.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.1.1",
    "storybook-addon-stencil": "^0.1.8",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-value-no-unknown-custom-properties": "^4.0.0",
    "typescript": "~4.3.5",
    "webpack": "5"
  },
  "pre-commit": {
    "colors": true,
    "silent": false,
    "run": [
      "test"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@zanichelli/albe-design-tokens": "^0.2.14",
    "classnames": "^2.3.1",
    "flatpickr": "^4.6.13",
    "hammerjs": "^2.0.8"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "yarn build"
    }
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "resolutions": {
    "@storybook/web-components/webpack": "^5",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0"
  }
}
