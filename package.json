{
  "name": "@zanichelli/albe-web-components",
  "version": "14.2.4",
  "description": "The Web Components implementation of Albe, the Zanichelli's design system.",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "unpkg": "dist/web-components-library/web-components-library.esm.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/",
    "loader/",
    "www/",
    "react/"
  ],
  "scripts": {
    "build": "mkdirp react && yarn build.wc && yarn build.react",
    "build-storybook": "yarn build && storybook build --config-dir .storybook . --output-dir storybook",
    "build.react": "rimraf react/* && tsc --build tsconfig.react.json",
    "build.wc": "stencil build",
    "generate": "plop --plopfile internals/generators/index.js",
    "lint": "yarn lint.eslint && yarn lint.stylelint && yarn lint.prettier",
    "lint-fix": "yarn lint-fix.eslint && yarn lint-fix.stylelint && yarn lint-fix.prettier",
    "lint-fix.eslint": "yarn lint.eslint --fix",
    "lint-fix.prettier": "prettier --write .",
    "lint-fix.stylelint": "yarn lint.stylelint --fix",
    "lint.eslint": "eslint ./src",
    "lint.prettier": "prettier --check .",
    "lint.stylelint": "stylelint \"src/**/*.css\"",
    "prepare": "husky install",
    "release": "standard-version",
    "start": "stencil build --dev --watch --serve --no-open",
    "start-storybook": "storybook dev --port 3003 --no-open",
    "test": "stencil test --spec",
    "test.e2e": "stencil test --e2e",
    "test.watch": "stencil test --spec --watch",
    "ts-check": "tsc --noEmit"
  },
  "dependencies": {
    "@zanichelli/albe-design-tokens": "^1.2.3",
    "dialog-polyfill": "^0.5.6",
    "flatpickr": "^4.6.13",
    "hammerjs": "^2.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@stencil-community/eslint-plugin": "^0.7.2",
    "@stencil/core": "4",
    "@stencil/react-output-target": "^0.5.3",
    "@storybook/addon-docs": "^8.1.5",
    "@storybook/addon-viewport": "^8.1.5",
    "@storybook/blocks": "^8.1.5",
    "@storybook/web-components": "^8.1.5",
    "@storybook/web-components-vite": "^8.1.5",
    "@types/hammerjs": "^2.0.39",
    "@types/jest": "^29.5.6",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "babel-loader": "^8.2.4",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "lit": "^3.1.2",
    "mkdirp": "^1.0.4",
    "plop": "^2.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "puppeteer": "^21.0.0",
    "rimraf": "^5.0.7",
    "standard-version": "^9.1.1",
    "storybook": "^8.1.5",
    "storybook-addon-stencil": "0.2.0",
    "stylelint": "^14.9.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-value-no-unknown-custom-properties": "^4.0.0",
    "typescript": "^5.4.3",
    "vite": "^5.2.11"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs"
}
