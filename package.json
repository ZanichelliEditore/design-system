{
  "name": "@zanichelli/albe-web-components",
  "version": "1.4.1",
  "description": "The Web Components implementation of Albe, the Zanichelli's design system.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/web-components-library.js",
  "files": [
    "dist/",
    "loader/",
    "www/",
    "react/"
  ],
  "scripts": {
    "build": "mkdirp react && yarn build.wc && yarn build.react",
    "build.wc": "stencil build --docs",
    "build.react": "rimraf react && tsc --build tsconfig.react.json",
    "start": "stencil build --dev --watch --serve",
    "generate": "plop --plopfile internals/generators/index.js",
    "test": "stencil test --spec",
    "test.watch": "stencil test --spec --watch",
    "test.e2e": "stencil test --e2e",
    "release": "standard-version",
    "start-storybook": "yarn build && start-storybook -p 3003 -s ./dist,./src/assets --ci",
    "build-storybook": "yarn build && build-storybook -c .storybook -s ./dist,./src/assets . -o storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@stencil/core": "^1.14.0",
    "@stencil/react-output-target": "^0.0.9",
    "@storybook/addon-a11y": "^6.1.21",
    "@storybook/addon-docs": "^6.1.21",
    "@storybook/addon-knobs": "^6.1.21",
    "@storybook/addon-viewport": "^6.1.21",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/web-components": "^6.1.21",
    "@types/hammerjs": "^2.0.36",
    "@types/jest": "25.2.3",
    "@types/puppeteer": "1.20.3",
    "@types/react-dom": "^17.0.0",
    "babel-loader": "^8.0.6",
    "husky": "^4.3.8",
    "jest": "24.9.0",
    "jest-cli": "26.0.1",
    "lit-html": "^1.1.2",
    "mkdirp": "^1.0.4",
    "plop": "^2.1.0",
    "puppeteer": "1.20.0",
    "rimraf": "^3.0.2",
    "standard-version": "^8.0.2",
    "storybook-addons-abstract": "^6.0.3"
  },
  "pre-commit": {
    "colors": true,
    "silent": false,
    "run": [
      "test"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "hammerjs": "^2.0.8"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "yarn build"
    }
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
